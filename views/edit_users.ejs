<div class="container">
    <div class="row">
        <div class="col-lg-6 mx-auto mt-4">
            <div class="card shadow">
                <div class="card-header bg-primary">
                    <h5 class="text-light">Edit User <%= user.name %></h5>
                </div>
                <div class="card-body p-4">
                    <form action="/api/update_user" method="post" id="add-form" enctype="multipart/form-data">
                        <input type="hidden" name="id" value="<%= user.id %>">
                        <div class="mb-3">
                            <label for="name">Name</label>
                            <input type="text" name="name" value="<%= user.name %>" class="form-control form-control-lg" placeholder="Enter Name" required/>
                        </div>
                        <div class="mb-3">
                            <label for="email">Email</label>
                            <input type="email" name="email" value="<%= user.email %>"class="form-control form-control-lg" placeholder="Enter Email" required/>
                        </div>
                        <div class="mb-3">
                            <label for="phone">Phone</label>
                            <input type="tel" name="phone" value="<%= user.phone %>" class="form-control form-control-lg" placeholder="Enter Phone" required/>
                        </div>
                        <div class="mb-3">
                            <img src="/<%= user.image %>" width="100">
                        </div>
                        <div class="mb-3">
                            <label for="image" class="form-label">Select Image</label>
                            <input type="file" name="image" value="<%= user.image %>" class="form-control form-control-lg" />
                        </div>
                        <input type="hidden" name="oldImage" value="<%= user.image %>">
                        <div class="mb-3">
                            <input type="submit" name="submit" value="Update user" class="btn btn-primary btn-lg" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>