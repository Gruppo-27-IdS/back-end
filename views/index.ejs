<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title><%= title %></title>
    </head>
    <body>
        <% if( message){%>
                <script>
                    alert("<%= message.message %>");
                    </script>
        <%} %>
        <table border="1">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Image</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Modifica</th>
                    <th>Elimina</th>
                </tr>
            </thead>
            <tbody>
                <% if (users != '') { %>
                    <% for (var i = 0; i < users.length; i++) { %>
                        <tr>
                            <td><%= users[i].name %></td>
                            <td><img src="<%= users[i].image %>" alt="User Image" width="50"/></td>
                            <td><%= users[i].email %></td>
                            <td><%= users[i].phone %></td>
                            <td><a href="/edit/<%= users[i]._id %>">Modifica</a></td>
                            <td><a href="/api/remove_user/<%= users[i]._id %>">Elimina</a></td>
                        </tr>
                    <% } %>
                <% } %>
            </tbody>
        </table>
    </body>
</html>
